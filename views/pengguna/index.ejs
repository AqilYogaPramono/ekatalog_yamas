            </div>
        </div>

        <div id="search-results-section" class="d-none">
            <div class="section-title-wrapper d-flex justify-content-between align-items-center mb-4">
                <h3 class="section-title">Hasil Pencarian</h3>
            </div>
            <div class="row row-cols-2 row-cols-md-4 g-4" id="search-results-list"></div>
        </div>
    </div>

    <%- include('../partials/__foot.ejs') %>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchForm = document.getElementById('search-form');
            const searchInput = document.getElementById('search-input');
            const newBooksSection = document.getElementById('new-books-section');
            const newMagazinesSection = document.getElementById('new-magazines-section');
            const searchResultsSection = document.getElementById('search-results-section');
            const searchResultsList = document.getElementById('search-results-list');
            const clearSearchButton = document.getElementById('clear-search');

            const allItems = Array.from(document.querySelectorAll('#new-books-list .col, #new-magazines-list .col'));

            function showSearchResults(query) {
                newBooksSection.classList.add('d-none');
                newMagazinesSection.classList.add('d-none');
                searchResultsSection.classList.remove('d-none');
               
                searchResultsList.classList.remove('d-flex', 'justify-content-center', 'align-items-center', 'py-5'); 
                searchResultsList.innerHTML = '';

                const filteredItems = allItems.filter(item => {
                    const title = item.getAttribute('data-title')?.toLowerCase() || '';
                    const author = item.getAttribute('data-author')?.toLowerCase() || '';
                    const edition = item.getAttribute('data-edition')?.toLowerCase() || '';
                    return title.includes(query) || author.includes(query) || edition.includes(query);
                });

                if (filteredItems.length > 0) {   
                    filteredItems.forEach(item => {
                        const clonedItem = item.cloneNode(true);
                        clonedItem.classList.add('mb-3'); 
                        searchResultsList.appendChild(clonedItem);
                    });
                } else {
                    searchResultsList.classList.add('d-flex', 'justify-content-center', 'align-items-center', 'py-5'); 
                    searchResultsList.innerHTML = `
                        <div id="empty-results" class="col-12 text-center">
                            <h3>Tidak ada hasil untuk kata kunci "${searchInput.value}".</h3>
                        </div>
                    `;
                }
            }

            searchForm.addEventListener('submit', function(event) {
                event.preventDefault();
                const query = searchInput.value.toLowerCase().trim();
                if (query) {
                    showSearchResults(query);
                }
            });

            searchInput.addEventListener('input', function () {
                if (searchInput.value.trim() !== "") {
                    clearSearchButton.classList.remove('d-none');
                    searchInput.classList.add('search-input-active');
                } else {
                    clearSearchButton.classList.add('d-none');
                    searchInput.classList.remove('search-input-active');
                }
            });

            searchForm.addEventListener('submit', function(event) {
                event.preventDefault();
                const query = searchInput.value.toLowerCase().trim();
                if (!query) return;
                showSearchResults(query);
            });
            clearSearchButton.addEventListener('click', function () {
                searchInput.value = '';
                clearSearchButton.classList.add('d-none');
                searchInput.classList.remove('search-input-active');
                searchResultsSection.classList.add('d-none');
                newBooksSection.classList.remove('d-none');
                newMagazinesSection.classList.remove('d-none');
                
                searchResultsList.classList.remove('d-flex', 'justify-content-center', 'align-items-center', 'py-5');
                searchResultsList.innerHTML = '';
            });
        });
    </script>
</body>
</html>