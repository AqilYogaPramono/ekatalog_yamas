<!DOCTYPE html>
<html lang="id">
<head>
    <%- include('../../partials/__head.ejs', { title: 'Detail Majalah' }) %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/magnific-popup.min.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }
        .btn-add {
            background-color: #0F8EC8;
            color: white;
            border: 1px solid #0F8EC8;
        }

        .btn-add:hover {
            background-color: #0c75a4;
            transform: translateY(-2px);
        }
        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.04);
        }
        .detail-header {
            font-weight: 700;
            font-size: 2rem;
            color: #212529;
            margin-bottom: 1.5rem;
        }
        .detail-cover-img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            cursor: pointer;
        }
        .detail-info-item {
            margin-bottom: 1rem;
            display: flex;
        }
        .detail-info-label {
            font-weight: 700;
            color: #495057;
            min-width: 150px;
        }
        .detail-info-value {
            color: #5f6870;
            flex-grow: 1;
            text-align: justify;
        }
        .mfp-close {
            color: #fff !important;
            opacity: 1;
            font-size: 30px !important;
            right: 0px !important;
            top: 0px !important;
        }
    </style>
</head>
<body>
    <div class="container-fluid page-body-wrapper flex flex-grow">
        <div class="container mt-5 mb-5">
            <a href="javascript:history.back()" class="btn btn-add mb-3">
                <i class="bi bi-arrow-left"></i> Kembali
            </a>
            
            <div class="row">
                <div class="col-md-4 text-center mb-4">
                    <a href="" class="portfolio-popup" id="magazine-cover-link">
                        <img src="" alt="Cover Majalah" class="detail-cover-img" id="magazine-cover">
                    </a>
                </div>
                
                <div class="col-md-8">
                    <h1 class="detail-header" id="magazine-title"></h1>
                    <div class="mb-4">
                        <div class="detail-info-item">
                            <span class="detail-info-label">Edisi</span>
                            <span class="detail-info-value" id="magazine-edition"></span>
                        </div>
                        <div class="detail-info-item">
                            <span class="detail-info-label">No. Klasifikasi</span>
                            <span class="detail-info-value" id="magazine-classification"></span>
                        </div>
                        <div class="detail-info-item">
                            <span class="detail-info-label">Bahasa</span>
                            <span class="detail-info-value" id="magazine-language"></span>
                        </div>
                        <div class="detail-info-item">
                            <span class="detail-info-label">Tahun Terbit</span>
                            <span class="detail-info-value" id="magazine-year"></span>
                        </div>
                        <div class="detail-info-item">
                            <span class="detail-info-label">Tempat Terbit</span>
                            <span class="detail-info-value" id="magazine-publication-place"></span>
                        </div>
                        <div class="detail-info-item">
                            <span class="detail-info-label">Penerbit</span>
                            <span class="detail-info-value" id="magazine-publisher"></span>
                        </div>
                        <div class="detail-info-item">
                            <span class="detail-info-label">Lokasi</span>
                            <span class="detail-info-value" id="magazine-location"></span>
                        </div>
                        <div class="detail-info-item">
                            <span class="detail-info-label">Ketersediaan</span>
                            <span class="detail-info-value" id="magazine-availability"></span>
                        </div>
                        <div class="detail-info-item">
                            <span class="detail-info-label">Sinopsis</span>
                            <span class="detail-info-value" id="magazine-synopsis"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <%- include('../../partials/__foot.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
    <script>
        const magazineData = {
            cover: "https://images.unsplash.com/photo-1579894451006-218413b5d2ef?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
            title: "National Geographic Indonesia",
            edition: "Edisi Khusus 'Keajaiban Laut'",
            classification: "059.922 1 NAT k",
            language: "Indonesia",
            year: "2024",
            publicationPlace: "Jakarta",
            publisher: "Gramedia Majalah",
            location: "Rak 3",
            availability: "Tersedia",
            synopsis: "Majalah ini mengulas secara mendalam keindahan dan keunikan ekosistem laut Indonesia. Dilengkapi dengan foto-foto eksklusif, artikel ini membahas terumbu karang, kehidupan biota laut langka, serta upaya konservasi yang dilakukan untuk menjaga kelestarian perairan nusantara."
        };

        function displayMagazineDetails(data) {
            document.getElementById('magazine-cover').src = data.cover;
            document.getElementById('magazine-cover').alt = `Cover Majalah ${data.title}`;
            document.getElementById('magazine-title').textContent = data.title;
            document.getElementById('magazine-cover-link').href = data.cover;

            document.getElementById('magazine-edition').textContent = `: ${data.edition}`;
            document.getElementById('magazine-classification').textContent = `: ${data.classification}`;
            document.getElementById('magazine-language').textContent = `: ${data.language}`;
            document.getElementById('magazine-year').textContent = `: ${data.year}`;
            document.getElementById('magazine-publication-place').textContent = `: ${data.publicationPlace}`;
            document.getElementById('magazine-publisher').textContent = `: ${data.publisher}`;
            document.getElementById('magazine-location').textContent = `: ${data.location}`;
            document.getElementById('magazine-availability').textContent = `: ${data.availability}`;
            document.getElementById('magazine-synopsis').textContent = `: ${data.synopsis}`;
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            displayMagazineDetails(magazineData);
        });

        $(document).ready(function() {
            $('.portfolio-popup').magnificPopup({
                type: 'image',
                removalDelay: 300,
                mainClass: 'mfp-fade',
                gallery: {
                    enabled: true
                },
                zoom: {
                    enabled: true,
                    duration: 300,
                    easing: 'ease-in-out',
                    opener: function(openerElement) {
                        return openerElement.is('img') ? openerElement : openerElement.find('img');
                    }
                }
            });
        });
    </script>
</body>
</html>