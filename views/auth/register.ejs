<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Register</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="shortcut icon" href="images/Logo Perpustakaan Medayu.webp">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('images/1.webp');
            background-size: cover;
            background-position: center;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            box-sizing: border-box;
        }

        .auth-form-light {
            background: #ffffff;
            padding: 2.5rem;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.25);
            width: 100%;
            max-width: 400px;
            box-sizing: border-box;
            position: relative;
            text-align: center;
        }

        .auth-form-light h2 {
            margin-top: 0;
            margin-bottom: 2rem;
            font-size: 2rem;
            color: #333;
        }

        .brand-logo {
            margin-bottom: 20px;
            text-align: center;
        }

        .brand-logo img {
            max-width: 80px;
            height: auto;
        }

        .form-group {
            margin-bottom: 1.25rem;
            width: 100%;
        }

        .input-group {
            display: flex;
            align-items: center;
            border: 1px solid #ced4da;
            border-radius: 5px;
            overflow: hidden;
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }

        .input-group:focus-within {
            border-color: #0F8EC8;
            box-shadow: 0 0 0 0.2rem rgba(15, 142, 200, 0.25);
        }

        .input-group-text {
            background-color: #e9ecef;
            border: none;
            padding: 0.75rem 1rem;
            color: #495057;
            cursor: pointer;
        }

        .toggle-password {
            display: flex !important;
            align-items: center;
            justify-content: center;
            padding: 0.75rem 1rem; 
        }

        .form-control-lg {
            border: none;
            box-shadow: none;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            height: auto;
            flex-grow: 1;
        }

        .form-control-lg:focus {
            outline: none;
        }

        .auth-form-btn {
            width: 100%;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            border-radius: 30px;
            margin-top: 1.5rem;
            background-color: #0F8EC8;
            border: 1px solid #0F8EC8;
            color: #D7F2FF;
            transition: all 0.3s ease;
            display: block;
            cursor: pointer;
            font-weight: 500;
        }

        .auth-form-btn:hover {
            background-color: #0E7CB3;
            border-color: #0E7CB3;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transform: translateY(-2px);
        }

        .close-icon {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 1.3rem;
            cursor: pointer;
            color: #666;
            transition: color 0.2s ease;
        }

        .close-icon:hover {
            color: #000;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.875rem;
            text-align: left;
            margin-top: 0.5rem;
        }

        /* Responsive */
        @media (max-width: 480px) {
            .auth-form-light {
                max-width: 95%;
                padding: 1.5rem;
            }

            .auth-form-light h2 {
                font-size: 1.5rem;
                margin-bottom: 1rem;
            }
            
            .brand-logo img {
                max-width: 60px;
            }

            .form-group {
                margin-bottom: 1rem;
            }

            .input-group-text,
            .form-control-lg,
            .toggle-password {
                padding: 0.6rem 0.8rem;
                font-size: 0.9rem;
            }

            .auth-form-btn {
                font-size: 0.9rem;
                padding: 0.6rem 1.2rem;
                margin-top: 1rem;
            }
        }
    </style>
</head>

<body>
    <section class="hero-section">
        <div class="brand-logo">
            <img src="images/Logo Perpustakaan Medayu.webp" alt="Logo Perpustakaan Medayu">
        </div>
        <div class="auth-form-light login-box">
            <span class="close-icon"><a href="#" style="color: inherit; text-decoration: none;"><i class="bi bi-x-lg"></i></a></span>
            <h2>Register</h2>
            <form class="pt-3" action="/register" method="POST">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input type="text" class="form-control form-control-lg" id="nameInput" placeholder="Name" name="name">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input type="email" class="form-control form-control-lg" id="emailInput" placeholder="Email" name="email">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control form-control-lg" id="passwordInput" placeholder="Password" name="password">
                        <span class="input-group-text toggle-password"><i class="bi bi-eye-slash"></i></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" class="form-control form-control-lg" id="passwordInput2" placeholder="Confirm Password" name="password_confirmation">
                        <span class="input-group-text toggle-password"><i class="bi bi-eye-slash"></i></span>
                    </div>
                    <div id="validation-error" class="text-danger mt-2"></div>
                </div>
                <div class="mt-3 text-center d-flex align-items-center justify-content-center">
                    <button type="submit" class="btn auth-form-btn">Register</button>
                </div>
            </form>
        </div>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleButtons = document.querySelectorAll('.toggle-password');
            toggleButtons.forEach(toggleButton => {
                const inputGroup = toggleButton.closest('.input-group');
                const passwordInput = inputGroup.querySelector('input');
                const toggleIcon = toggleButton.querySelector('i');
                toggleButton.addEventListener('click', function () {
                    const isPassword = passwordInput.type === 'password';
                    passwordInput.type = isPassword ? 'text' : 'password';
                    if (isPassword) {
                        toggleIcon.classList.remove('bi-eye-slash');
                        toggleIcon.classList.add('bi-eye');
                    } else {
                        toggleIcon.classList.remove('bi-eye');
                        toggleIcon.classList.add('bi-eye-slash');
                    }
                });
            });

            const form = document.querySelector('form');
            const nameInput = document.getElementById('nameInput');
            const emailInput = document.getElementById('emailInput');
            const passwordInput = document.getElementById('passwordInput');
            const passwordInput2 = document.getElementById('passwordInput2');
            const errorDiv = document.getElementById('validation-error');

            form.addEventListener('submit', function (event) {
                errorDiv.textContent = '';
                nameInput.classList.remove('is-invalid');
                emailInput.classList.remove('is-invalid');
                passwordInput.classList.remove('is-invalid');
                passwordInput2.classList.remove('is-invalid');

                let isValid = true;
                if (nameInput.value.trim() === '') {
                    nameInput.classList.add('is-invalid');
                    isValid = false;
                }
                if (emailInput.value.trim() === '') {
                    emailInput.classList.add('is-invalid');
                    isValid = false;
                }
                if (passwordInput.value.trim() === '') {
                    passwordInput.classList.add('is-invalid');
                    isValid = false;
                }
                if (passwordInput2.value.trim() === '') {
                    passwordInput2.classList.add('is-invalid');
                    isValid = false;
                }

                if (!isValid) {
                    event.preventDefault();
                    errorDiv.textContent = 'Semua kolom tidak boleh kosong.';
                } else if (passwordInput.value !== passwordInput2.value) {
                    event.preventDefault();
                    errorDiv.textContent = 'Konfirmasi Password tidak cocok.';
                    passwordInput.classList.add('is-invalid');
                    passwordInput2.classList.add('is-invalid');
                }
            });
        });
    </script>
</body>

</html>