<div class="flash-container">
  <% if (messages && messages.success && messages.success.length > 0) { %>
    <% for (let i = 0; i < messages.success.length; i++) { %>
      <div class="flash flash-success" role="status" aria-live="polite">
        <div class="flash-body"><%= messages.success[i] %></div>
        <button type="button" class="flash-close" aria-label="Tutup">&times;</button>
      </div>
    <% } %>
  <% } %>
  <% if (messages && messages.error && messages.error.length > 0) { %>
    <% for (let i = 0; i < messages.error.length; i++) { %>
      <div class="flash flash-error" role="alert" aria-live="assertive">
        <div class="flash-body"><%= messages.error[i] %></div>
        <button type="button" class="flash-close" aria-label="Tutup">&times;</button>
      </div>
    <% } %>
  <% } %>
</div>


