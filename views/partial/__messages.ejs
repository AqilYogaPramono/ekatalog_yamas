<% if (messages.success) { %>
  <div id="alert-flash" class="alert alert-success alert-dismissible fade show position-fixed" role="alert" style="top: 32px; right: 32px; z-index: 1055; min-width: 320px; max-width: 420px; box-shadow: 0 4px 24px rgba(0,0,0,0.12); border-radius: 8px; background: rgba(223, 250, 222, 0.98); color: #256029; padding: 18px 24px 18px 20px; font-size: 1rem; font-weight: 500;">
    <%= messages.success %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="top: 8px; right: 12px;">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% } else if (messages.error) { %>
  <div id="alert-flash" class="alert alert-danger alert-dismissible fade show position-fixed" role="alert" style="top: 32px; right: 32px; z-index: 1055; min-width: 320px; max-width: 420px; box-shadow: 0 4px 24px rgba(0,0,0,0.12); border-radius: 8px; background: rgba(255, 235, 238, 0.98); color: #b71c1c; padding: 18px 24px 18px 20px; font-size: 1rem; font-weight: 500;">
    <%= messages.error %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="top: 8px; right: 12px;">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% } %>
<script>
  setTimeout(function() {
    var alert = document.getElementById('alert-flash');
    if(alert) {
      alert.classList.remove('show');
      alert.classList.add('fade');
      setTimeout(function() { if(alert) alert.remove(); }, 500);
    }
  }, 3500);
</script>