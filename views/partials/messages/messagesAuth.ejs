<div class="flash-container-auth">
  <% if (messages && messages.success && messages.success.length) { %>
    <div class="flash flash-success" role="status" aria-live="polite">
      <div class="flash-body"><%= messages.success[0] %></div>
    </div>
  <% } %>
  <% if (messages && messages.error && messages.error.length) { %>
    <div class="flash flash-error" role="alert" aria-live="assertive">
      <div class="flash-body"><%= messages.error[0] %></div>
    </div>
  <% } %>
</div>


