<%- include('../../../../partial/__messages.ejs') %>
<%- include('../../../../partial/__head.ejs', { title: 'Daftar Kategori Buku' }) %>
<%- include('../../../../partial/__nav-side.ejs') %>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Edit Kategori Buku</h4>
        <form class="forms-sample" action="/pengurus/kategori-buku/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <label for="inputKategoriBuku">Nama Kategori Buku</label>
            <input type="text" class="form-control" id="inputKategoriBuku" name="nama_kategori" placeholder="Inputkan Nama Kategori Buku" value="<%= data.nama_kategori %>" required>
          </div>
          <button type="submit" class="btn btn-primary mr-2">Update</button>
          <a href="/pengurus/kategori-buku" class="btn btn-light">Cancel</a>
        </form>
      </div>
    </div>
  </div>

<%- include('../../../../partial/__script.ejs') %>