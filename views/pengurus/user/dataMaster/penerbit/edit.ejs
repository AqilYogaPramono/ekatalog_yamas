<%- include('../../../../partial/__messages.ejs') %>
<%- include('../../../../partial/__head.ejs', { title: 'Daftar Penerbit' }) %>
<%- include('../../../../partial/__nav-side.ejs') %>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Edit penerbit</h4>
        <form class="forms-sample" action="/pengurus/penerbit/update/<%= data.id %>" method="POST">
          <div class="form-group">
            <label for="inputPenerbit">Penerbit</label>
            <input type="text" class="form-control" id="inputPenerbit" name="nama_penerbit" placeholder="Inputkan Penerbit" value="<%= data.nama_penerbit %>" required>
          </div>
          <button type="submit" class="btn btn-primary mr-2">Update</button>
          <a href="/pengurus/penerbit" class="btn btn-light">Cancel</a>
        </form>
      </div>
    </div>
  </div>

<%- include('../../../../partial/__script.ejs') %>