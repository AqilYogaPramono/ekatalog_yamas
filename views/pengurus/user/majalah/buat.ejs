<!DOCTYPE html>
<html lang="id">

<head>
    <%- include('../../../partials/__head.ejs', { title: 'Tambah Majalah' }) %>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
        }

        .card-container {
            padding: 0 15px;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            padding: 2.5rem;
            background: white;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .card-body h4 {
            font-weight: 600;
            color: #333;
            margin-bottom: 2rem;
            font-size: 1.5rem;
        }

        .card-body p.card-description {
            color: #6c757d;
            font-size: 0.875rem;
            margin-bottom: 2rem;
        }

        .form-control,
        .btn,
        .btn-primary,
        .btn-secondary,
        .file-upload-info,
        .file-upload-browse,
        .form-select,
        textarea {
            font-family: 'Poppins', sans-serif;
        }

        ::placeholder {
            font-family: 'Poppins', sans-serif;
        }

        :-ms-input-placeholder {
            font-family: 'Poppins', sans-serif;
        }

        ::-ms-input-placeholder {
            font-family: 'Poppins', sans-serif;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #dee2e6;
            padding: 12px 16px;
            transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            width: 100%;
        }

        .form-control:focus {
            border-color: #0F8EC8;
            box-shadow: 0 0 0 0.2rem rgba(15, 142, 200, 0.25);
            outline: none;
        }

        .file-upload-default {
            display: none;
        }

        .input-group {
            display: flex;
            align-items: center;
            width: 100%;
        }

        .file-upload-info {
            flex: 1;
            cursor: pointer;
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            border-radius: 8px;
        }

        .file-upload-browse {
            background-color: white;
            color: #495057;
            font-weight: 500;
            padding: 12px 20px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.2s ease-in-out;
            display: flex;
            align-items: center;
            gap: 8px;
            width: 100%;
            justify-content: center;
        }

        .file-upload-browse:hover {
            background-color: #e9ecef;
            border-color: #ced4da;
        }

        .btn-primary {
            background-color: #0F8EC8;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            transition: background-color 0.2s ease-in-out;
        }

        .btn-primary:hover {
            background-color: #0c75a4;
        }

        .btn-secondary {
            background-color: #e9ecef;
            color: #343a40;
            padding: 12px 24px;
            border: 1px solid #ced4da;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
        }

        .btn-secondary:hover {
            background-color: #dae0e5;
        }

        .form-group {
            margin-bottom: 1.2rem;
        }

        .form-select {
            width: 100%;
            padding: 12px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            font-family: 'Poppins', sans-serif;
            transition: border-color 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

        .form-select:focus {
            border-color: #0F8EC8;
            box-shadow: 0 0 0 0.2rem rgba(15, 142, 200, 0.25);
            outline: none;
        }

        .button-group {
            margin-top: 20px;
            display: flex;
            gap: 1rem;
            justify-content: center;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4);
            animation: fadeIn 0.3s;
            align-items: center;
            justify-content: center;
        }

        .modal-content {
            background-color: #fff;
            margin: auto;
            padding: 30px;
            border-radius: 12px;
            width: 90%;
            max-width: 400px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            text-align: center;
            animation: slideIn 0.4s;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }

        .modal-icon {
            font-size: 3rem;
            color: #28a745;
        }

        .modal-content h3 {
            margin: 0;
            color: #333;
            font-weight: 600;
        }

        .modal-content p {
            margin: 0;
            color: #6c757d;
        }

        .modal-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            width: 100%;
        }

        .modal-close-btn,
        .modal-confirm-btn,
        .modal-cancel-btn {
            background-color: #0F8EC8;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: background-color 0.2s ease;
            flex: 1;
        }

        .modal-close-btn:hover,
        .modal-confirm-btn:hover {
            background-color: #0c75a4;
        }

        .modal-cancel-btn {
            background-color: #6c757d;
        }

        .modal-cancel-btn:hover {
            background-color: #5a6268;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes slideIn {
            from {
                transform: translateY(-50px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        @media (max-width: 768px) {
            .card {
                padding: 1.5rem;
            }

            .card-body h4 {
                font-size: 1.25rem;
                margin-bottom: 1.5rem;
            }

            .form-control,
            .form-select,
            textarea {
                width: 100%;
                box-sizing: border-box;
            }

            .input-group {
                flex-wrap: wrap;
            }

            .file-upload-browse {
                width: 100%;
                border-radius: 8px !important;
                margin-top: 0.5rem;
            }

            .button-group {
                flex-direction: row;
                justify-content: center;
                flex-wrap: wrap;
            }
        }
    </style>
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper flex ">
            <%- include('../../../partials/__nav.ejs', { currentPath: '/majalah/create' }) %>
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Tambah Majalah</h4>

                        <form action="/majalah/create" method="POST" enctype="multipart/form-data" id="majalahForm">
                            <div class="form-group">
                                <label for="judul">Judul Majalah</label>
                                <input type="text" class="form-control" id="judul" name="judul"
                                    placeholder="Masukkan judul majalah, contoh: " required>
                            </div>

                            <div class="form-group">
                                <label for="edisi">Edisi</label>
                                <input type="text" class="form-control" id="edisi" name="edisi"
                                    placeholder="Masukkan nama edisi, contoh: Juni 2007">
                            </div>

                            <div class="form-group">
                                <label for="isbn">ISBN / ISSN</label>
                                <input type="text" class="form-control" id="isbn" name="isbn"
                                    placeholder="Masukkan ISBN atau ISSN, contoh: 978-602-287-184-2">
                            </div>

                            <div class="form-group">
                                <label for="nomorKlasifikasi">Nomor Klasifikasi</label>
                                <input type="text" class="form-control" id="nomorKlasifikasi" name="nomorKlasifikasi"
                                    placeholder="Masukkan nomor klasifikasi, contoh: 813">
                            </div>

                            <div class="form-group">
                                <label for="bahasa">Bahasa</label>
                                <input type="text" class="form-control" id="bahasa" name="bahasa"
                                    placeholder="Masukkan bahasa, contoh: Indonesia">
                            </div>

                            <div class="form-group">
                                <label for="jumlahHalaman">Jumlah Halaman</label>
                                <input type="number" class="form-control" id="jumlahHalaman" name="jumlahHalaman"
                                    placeholder="Masukkan jumlah halaman, contoh: 320">
                            </div>

                            <div class="form-group">
                                <label for="tahunTerbit">Tahun Terbit</label>
                                <select class="form-select" id="tahunTerbit" name="tahunTerbit">
                                    <%
                                    const currentYear = new Date().getFullYear();
                                    for (let year = currentYear; year >= 1; year--) {
                                    %>
                                    <option value="<%= year %>"><%= year %></option>
                                    <%
                                    }
                                    %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="tempatTerbit">Tempat Terbit</label>
                                <input type="text" class="form-control" id="tempatTerbit" name="tempatTerbit"
                                    placeholder="Masukkan tempat terbit, contoh: Jakarta">
                            </div>

                            <div class="form-group">
                                <label for="penerbit">Penerbit</label>
                                <input type="text" class="form-control" id="penerbit" name="penerbit"
                                    placeholder="Masukkan nama penerbit, contoh: Tempo">
                            </div>

                            <div class="form-group">
                                <label for="kategori">Kategori</label>
                                <input type="text" class="form-control" id="kategori" name="kategori"
                                    placeholder="Masukkan kategori majalah, contoh: Fiksi">
                            </div>

                            <div class="form-group">
                                <label for="lokasiRak">Lokasi Penyimpanan</label>
                                <input type="text" class="form-control" id="lokasiRak" name="lokasiRak"
                                    placeholder="Masukkan lokasi penyimpanan, contoh: Rak 3A">
                            </div>

                            <div class="form-group">
                                <label for="ketersediaan">Ketersediaan</label>
                                <select class="form-control" id="ketersediaan" name="ketersediaan">
                                    <option value="Tersedia">Tersedia</option>
                                    <option value="Tidak Tersedia">Tidak Tersedia</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="sinopsis">Sinopsis</label>
                                <textarea class="form-control" id="sinopsis" name="sinopsis" rows="4"
                                    placeholder="Masukkan sinopsis singkat majalah"></textarea>
                            </div>

                            <div class="form-group">
                                <label for="coverImageInput" class="block text-gray-700 text-sm font-medium mb-1">Sampul Majalah</label>
                                <div class="input-group">
                                    <button type="button" class="file-upload-browse btn" id="browseCoverImage">
                                        <i class="bi bi-upload"></i> Unggah Sampul Majalah
                                    </button>
                                    <input type="file" name="coverImage" id="coverImageInput" class="file-upload-default" accept="image/*">
                                </div>
                                <div class="mt-3">
                                    <img id="coverImagePreview" src="#" alt="Preview Sampul Majalah" style="max-width: 150px; display: none; border: 1px solid #ccc; border-radius: 4px; padding: 4px;">
                                </div>
                            </div>

                            <div class="button-group">
                                <button type="button" class="btn-primary" id="confirmBtn">Simpan</button>
                                <a href="/majalah" class="btn-secondary">Batal</a>
                            </div>
                        </form>

                    </div>
                </div>
        </div>
    </div>

    <div id="confirmationModal" class="modal">
        <div class="modal-content">
            <i class="bi bi-question-circle-fill modal-icon" style="color: #ffc107;"></i>
            <h3>Konfirmasi</h3>
            <p>Apakah Anda yakin ingin menyimpan data majalah baru ini?</p>
            <div class="modal-buttons">
                <button type="button" class="modal-confirm-btn" id="yesBtn">Ya, Simpan</button>
                <button type="button" class="modal-cancel-btn" id="noBtn">Tidak</button>
            </div>
        </div>
    </div>

    <div id="successModal" class="modal">
        <div class="modal-content">
            <i class="bi bi-check-circle-fill modal-icon"></i>
            <h3>Berhasil!</h3>
            <p>Data majalah baru telah berhasil disimpan.</p>
            <button type="button" class="modal-close-btn" id="closeModal">OK</button>
        </div>
    </div>

    <%- include('../../../partials/__foot.ejs') %>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const browseCoverImage = document.getElementById('browseCoverImage');
            const coverImageInput = document.getElementById('coverImageInput');
            const coverImagePreview = document.getElementById('coverImagePreview');

            browseCoverImage.addEventListener('click', () => {
                coverImageInput.click();
            });

            coverImageInput.addEventListener('change', () => {
                if (coverImageInput.files.length > 0) {
                    const file = coverImageInput.files[0];
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        coverImagePreview.src = e.target.result;
                        coverImagePreview.style.display = 'block';
                    };
                    reader.readAsDataURL(file);
                } else {
                    coverImagePreview.style.display = 'none';
                }
            });

            const form = document.getElementById('majalahForm');
            const confirmBtn = document.getElementById('confirmBtn');
            const confirmationModal = document.getElementById('confirmationModal');
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');

            confirmBtn.addEventListener('click', function(event) {
                if (!form.reportValidity()) {
                    return;
                }
                confirmationModal.style.display = 'flex';
            });

            yesBtn.addEventListener('click', function() {
                confirmationModal.style.display = 'none';
 
                form.submit();
            });

            noBtn.addEventListener('click', function() {
                confirmationModal.style.display = 'none';
            });

            window.addEventListener('click', function(event) {
                if (event.target == confirmationModal) {
                    confirmationModal.style.display = 'none';
                }
            });
        });
    </script>
</body>

</html>