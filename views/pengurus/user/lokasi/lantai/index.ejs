<%- include('../../../../partial/__messages.ejs') %>
<%- include('../../../../partial/__head.ejs', { title: 'Daftar Lantai' }) %>
<%- include('../../../../partial/__nav-side.ejs') %>

<style>
  .cell-no {
    width: 22px;
    text-align: center;
  }
  .cell-lantai {
    padding-left: 12px !important;
    padding-right: 0 !important;
  }
  .cell-aksi {
    width: 172px;
    padding-left: 0 !important;
    padding-right: 8px !important;
  }
  .aksi-spacer {
    display: inline-block;
    width: 74px;
    height: 1px;
  }
  .aksi-flex {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.7rem;
  }
</style>

<div class="col-lg-12 grid-margin stretch-card">
  <div class="card"><div class="card-body">

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h4 class="card-title mb-0">Daftar Lantai</h4>
      <a href="/pengurus/lantai/buat" class="btn btn-primary" id="btnTambah">
        <i class="mdi mdi-plus"></i> Tambah Lantai
      </a>
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-hover table-bordered align-middle">
        <thead class="table-light">
          <tr>
            <th class="cell-no">No</th>
            <th class="cell-lantai">Lantai</th>
            <th class="cell-aksi">
              <div class="d-flex justify-content-center align-items-center" style="gap: 0.7rem;">
                <span class="aksi-spacer"></span>
                <span>Aksi</span>
                <span class="aksi-spacer"></span>
              </div>
            </th>
          </tr>
        </thead>
        <tbody>
          <% for (let i = 0; i < data.length; i++) { %>
          <tr>
            <td class="cell-no"><%= i + 1 %></td>
            <td class="cell-lantai"><%= data[i].kode_lantai%></td>
            <td class="align-middle cell-aksi">
              <div class="aksi-flex">
                <a href="/pengurus/lantai/edit/<%= data[i].id %>" class="btn btn-sm btn-warning">
                  <i class="mdi mdi-pencil"></i> Edit
                </a>
                <button class="btn btn-sm btn-danger" data-toggle="modal" data-target="#modalDelete<%= data[i].id %>">
                  <i class="mdi mdi-delete"></i> Hapus
                </button>
              </div>
              <div class="modal fade" id="modalDelete<%= data[i].id %>" tabindex="-1" role="dialog" aria-labelledby="modalDeleteLabel<%= data[i].id %>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <form action="/pengurus/lantai/delete/<%= data[i].id %>" method="POST">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="modalDeleteLabel<%= data[i].id %>">Konfirmasi Hapus</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                      </div>
                      <div class="modal-body">
                        Apakah Anda yakin ingin menghapus lantai "<%= data[i].kode_lantai %>"?
                      </div>
                      <div class="modal-footer text-right">
                        <button type="button" class="btn btn-light" data-dismiss="modal">Batal</button>
                        <button type="submit" class="btn btn-danger">Hapus</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>

  </div></div>
</div>

<%- include('../../../../partial/__script.ejs') %>