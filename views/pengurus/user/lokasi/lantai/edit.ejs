<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../../partials/__head.ejs', { title: 'Edit Lantai' }) %>
</head>

<body class="page-lokasi-lantai">
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <%- include('../../../partials/__nav.ejs', { currentPath: '/pengurus/user/lokasi/lantai' }) %>
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        <div class="col-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Edit Lantai</h4>
                                    <p class="card-description">Ubah detail lantai.</p>
                                    <form class="forms-sample" action="/pengurus/user/lokasi/lantai/edit/<%= lantai.id %>" method="POST">
                                        <div class="form-group">
                                            <label for="namaLantai">Nama Lantai</label>
                                            <input type="text" class="form-control" id="namaLantai" name="nama" value="<%= typeof lantai !== 'undefined' ? lantai.nama : '' %>" placeholder="Edit nama lantai, contoh: Lantai 1" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary mr-2">Update</button>
                                        <a href="/pengurus/user/lokasi/lantai" class="btn btn-light">Batal</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../../../partials/__foot.ejs') %>
</body>

</html>
