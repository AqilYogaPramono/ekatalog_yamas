<%- include('../../../../partial/__messages.ejs') %>
<%- include('../../../../partial/__head.ejs', { title: 'Edit Ruangan' }) %>
<%- include('../../../../partial/__nav-side.ejs') %>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Edit Ruangan</h4>
        <form class="forms-sample" action="/pengurus/ruangan/edit/<%= data.id %>" method="POST">
          <div class="form-group">
            <label for="inputlantai">Lantai</label>
            <select class="form-control" id="inputlantai" name="id_lantai" required>
              <option value="">Pilih Lantai</option>
              <% lantai.forEach(function(item) { %>
                <option value="<%= item.id %>" <%= item.id === data.id_lantai ? 'selected' : '' %>><%= item.kode_lantai %></option>
              <% }) %>
            </select>
          </div>
          <div class="form-group">
            <label for="inputruangan">Kode Ruangan</label>
            <input type="text" class="form-control" id="inputruangan" name="kode_ruangan" placeholder="Inputkan kode ruangan" value="<%= data.kode_ruangan %>" required>
          </div>
          <button type="submit" class="btn btn-primary mr-2">Update</button>
          <a href="/pengurus/ruangan" class="btn btn-light">Cancel</a>
        </form>
      </div>
    </div>
  </div>

<%- include('../../../../partial/__script.ejs') %>