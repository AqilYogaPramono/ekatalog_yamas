<%- include('../../partials1/header/__headerDashboard.ejs', { title: 'Dashboard Manajer' }) %>
<%- include('../../partials1/nav-side/__nav-saideAdmin.ejs') %>
<%- include('../../partials1/messages/messagesDashboard.ejs') %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 col-sm-6 col-lg-3 grid-margin stretch-card">
                <div class="stat-card card w-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Pustakawan Dalam Proses</div>
                                <div class="stat-number" data-count="<%= pustakawanProses.pustakawan_proses %>"><%= pustakawanProses.pustakawan_proses %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-lg-3 grid-margin stretch-card">
                <div class="stat-card card w-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Pustakawan Aktif</div>
                                <div class="stat-number" data-count="<%= pustakawanAktif.pengguna_aktif %>"><%= pustakawanAktif.pengguna_aktif %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-lg-3 grid-margin stretch-card">
                <div class="stat-card card w-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Buku Dihapus</div>
                                <div class="stat-number" data-count="<%= totalBukuHapus[0].total_buku_hapus %>"><%= totalBukuHapus[0].total_buku_hapus %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 col-lg-3 grid-margin stretch-card">
                <div class="stat-card card w-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Majalah Dihapus</div>
                                <div class="stat-number" data-count="<%= totalMajalahHapus[0].total_majalah %>"><%= totalMajalahHapus[0].total_majalah %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title mb-0">Buku Terbaru</h4>
                            <a href="/manajer/buku" class="btn btn-primary btn-sm">
                                <i class="mdi mdi-eye"></i> Lihat Semua
                            </a>
                        </div>
                        <div>
                            <table class="table table-hover table-stacked">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Judul</th>
                                        <th>No. Klasifikasi</th>
                                        <th>Lokasi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (newBukuHapus && newBukuHapus.length > 0) { %>
                                        <% for (let i = 0; i < newBukuHapus.length; i++) { %>
                                            <tr>
                                                <td data-label="No"><%= i + 1 %></td>
                                                <td data-label="Judul"><%= newBukuHapus[i].judul %></td>
                                                <td data-label="No. Klasifikasi"><%= newBukuHapus[i].no_klasifikasi %></td>
                                                <td data-label="Lokasi"><%= newBukuHapus[i].lokasi_buku %></td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center">Tidak ada data</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title mb-0">Majalah Terbaru</h4>
                            <a href="/manajer/majalah" class="btn btn-primary btn-sm">
                                <i class="mdi mdi-eye"></i> Lihat Semua
                            </a>
                        </div>
                        <div>
                            <table class="table table-hover table-stacked">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Judul</th>
                                        <th>Edisi</th>
                                        <th>No. Klasifikasi</th>
                                        <th>Lokasi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (newMajalahHapus && newMajalahHapus.length > 0) { %>
                                        <% for (let i = 0; i < newMajalahHapus.length; i++) { %>
                                            <tr>
                                                <td data-label="No"><%= i + 1 %></td>
                                                <td data-label="Judul"><%= newMajalahHapus[i].judul %></td>
                                                <td data-label="Edisi"><%= newMajalahHapus[i].edisi %></td>
                                                <td data-label="No. Klasifikasi"><%= newMajalahHapus[i].no_klasifikasi %></td>
                                                <td data-label="Lokasi"><%= newMajalahHapus[i].lokasi_majalah %></td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">Tidak ada data</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials1/script/__scriptDashboard.ejs') %>