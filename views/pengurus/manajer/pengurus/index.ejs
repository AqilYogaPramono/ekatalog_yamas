<%- include('../../../partialsAdmin/__messages.ejs') %>
<%- include('../../../partialsAdmin/__head.ejs', { title: 'Daftar Pengurus' }) %>
<%- include('../../../partialsAdmin/__nav-side.ejs') %>

<div class="col-lg-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title mb-4">Daftar Pengurus</h4>

      <% if (data.length === 0) { %>
        <p>Tidak ada data pengurus.</p>
      <% } else { %>
        <div class="list-group">
          <% data.forEach((pengurus) => { %>
            <div class="list-group-item mb-3 border rounded">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <strong><%= pengurus.nama %></strong><br>
                  <small>Email: <%= pengurus.email %></small>
                </div>
                <div class="d-flex align-items-center gap-2">
                  <!-- Tombol Update Status -->
                  <button class="btn btn-sm btn-warning" data-toggle="modal" data-target="#modalUpdate<%= pengurus.id %>">
                    <i class="mdi mdi-pencil"></i> Update Status
                  </button>

                  <!-- Tombol Delete -->
                  <button class="btn btn-sm btn-danger" data-toggle="modal" data-target="#modalDelete<%= pengurus.id %>">
                    <i class="mdi mdi-delete"></i> Hapus
                  </button>
                </div>
              </div>

              <!-- Modal Update Status -->
              <div class="modal fade" id="modalUpdate<%= pengurus.id %>" tabindex="-1" role="dialog" aria-labelledby="modalUpdateLabel<%= pengurus.id %>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <form action="/admin/pengurus/edit/<%= pengurus.id %>" method="POST">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">Update Status Akun</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                      </div>
                      <div class="modal-body">
                        <p>Update status akun untuk <strong><%= pengurus.nama %></strong>:</p>
                        <select name="status_akun" class="form-control" required>
                          <% 
                            const statusOptions = ['Aktif', 'Non-Aktif', 'Proses']
                            statusOptions.forEach(opt => {
                              if (opt !== pengurus.status_akun) {
                          %>
                            <option value="<%= opt %>"><%= opt %></option>
                          <%  } }) %>
                        </select>
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-dismiss="modal">Batal</button>
                        <button type="submit" class="btn btn-warning">Update</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>

              <!-- Modal Delete -->
              <div class="modal fade" id="modalDelete<%= pengurus.id %>" tabindex="-1" role="dialog" aria-labelledby="modalDeleteLabel<%= pengurus.id %>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <form action="/admin/pengurus/delete/<%= pengurus.id %>" method="POST">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">Hapus Pengurus</h5>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                      </div>
                      <div class="modal-body">
                        Apakah Anda yakin ingin menghapus <strong><%= pengurus.nama %></strong>?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-light" data-dismiss="modal">Batal</button>
                        <button type="submit" class="btn btn-danger">Hapus</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>

            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../../../partialsAdmin/__script.ejs') %>
