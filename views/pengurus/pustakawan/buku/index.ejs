<%- include('../../../partials1/header/__headerDashboard.ejs', { title: 'Data Buku' }) %>
<%- include('../../../partials1/nav-side/__nav-sidePengurus.ejs') %>
<%- include('../../../partials1/messages/messagesDashboard.ejs') %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3">
                            <h4 class="card-title mb-3 mb-md-0">Data Buku</h4>
                            <div class="d-flex gap-2">
                                <a href="/templateExcel/Buku.xlsx" class="btn btn-outline-primary btn-sm mr-2" download>Template Excel</a>
                                <button type="button" class="btn btn-primary btn-sm mr-2" data-toggle="modal" data-target="#modalUploadBatch" data-loading>Tambah Batch</button>
                                <a href="/pustakawan/buku/buat" class="btn btn-primary btn-sm" data-loading>Tambah Buku</a>
                            </div>
                        </div>

                        <form action="/pustakawan/buku/search" method="POST" class="mb-3" data-loading>
                            <div class="input-group">
                                <input type="text" class="form-control" name="judul" placeholder="Cari judul buku..." value="<%= (typeof keyword !== 'undefined' && keyword) ? keyword : '' %>">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-primary" type="submit">Cari</button>
                                </div>
                            </div>
                        </form>

                        <div class="table-responsive">
                            <table class="table table-hover table-stacked">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Cover</th>
                                        <th>Judul</th>
                                        <th>ISBN/ISSN</th>
                                        <th>No Klasifikasi</th>
                                        <th>Lokasi</th>
                                        <th style="width: 200px;" class="text-right">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (Array.isArray(buku) && buku.length) { %>
                                        <% for (let i = 0; i < buku.length; i++) { const item = buku[i]; %>
                                            <tr>
                                                <td data-label="No"><%= i + 1 %></td>
                                                <td data-label="Cover">
                                                    <img class="img-click-preview" data-src="<%= item.foto_cover ? ('/images/buku/' + item.foto_cover) : '/images/no-image.png' %>" src="<%= item.foto_cover ? ('/images/buku/' + item.foto_cover) : '/images/no-image.png' %>" alt="cover" style="height:85px;width:auto;border-radius:6px;object-fit:cover;cursor:zoom-in;">
                                                </td>
                                                <td data-label="Judul"><%= item.judul %></td>
                                                <td data-label="ISBN/ISSN"><%= item.isbn_issn || '-' %></td>
                                                <td data-label="No Klasifikasi"><%= item.no_klasifikasi || '-' %></td>
                                                <td data-label="Lokasi"><%= item.lokasi_buku || item.lokasi || '-' %></td>
                                                <td class="text-right" data-label="Aksi">
                                                    <div class="btn-actions">
                                                        <a href="/pustakawan/buku/<%= item.id %>" class="btn btn-sm btn-outline-primary" data-loading>Detail</a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="text-center">Belum ada data</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="text-muted small">Halaman <%= (typeof page !== 'undefined' && page) ? page : 1 %> dari <%= (typeof totalHalaman !== 'undefined' && totalHalaman) ? totalHalaman : 1 %></div>
                            <nav>
                                <ul class="pagination mb-0">
                                    <% const currentPage = (typeof page !== 'undefined' && page) ? page : 1; %>
                                    <% const totalPages = (typeof totalHalaman !== 'undefined' && totalHalaman) ? totalHalaman : 1; %>
                                    <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
                                        <a class="page-link" href="?page=<%= currentPage - 1 %>" data-loading aria-label="Sebelumnya">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    <% for (let p = 1; p <= totalPages; p++) { %>
                                        <li class="page-item <%= p === currentPage ? 'active' : '' %>"><a class="page-link" href="?page=<%= p %>" data-loading><%= p %></a></li>
                                    <% } %>
                                    <li class="page-item <%= currentPage >= totalPages ? 'disabled' : '' %>">
                                        <a class="page-link" href="?page=<%= currentPage + 1 %>" data-loading aria-label="Berikutnya">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modal-below-navbar" id="modalUploadBatch" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Batch Buku</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="formUploadBatch" action="/pustakawan/buku/create-batch-buku" method="POST" enctype="multipart/form-data" data-loading>
                    <div class="form-group">
                        <label>File Excel</label>
                        <input type="file" name="files" class="form-control" accept=".xlsx,.xls" required>
                        <small class="form-text text-muted">Pilih template Excel berisi data buku.</small>
                    </div>
                    <div class="form-group">
                        <label>Folder Gambar Cover</label>
                        <input type="file" name="files" class="form-control" accept="image/*" multiple data-preview="previewBatch" required>
                        <small class="form-text text-muted">Unggah seluruh gambar cover yang dirujuk pada Excel.</small>
                        <div class="mt-2" id="previewBatch" style="display: none;">
                            <div class="d-flex flex-wrap gap-2" id="previewBatchContainer"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="formUploadBatch" class="btn btn-primary">Upload</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade modal-below-navbar modal-top" id="globalImagePreviewModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Pratinjau Gambar</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-0">
                <img id="globalImagePreviewEl" src="" alt="preview" style="width:100%;height:auto;display:block;">
            </div>
        </div>
    </div>
</div>

<%- include('../../../partials1/script/__scriptDashboard.ejs') %>