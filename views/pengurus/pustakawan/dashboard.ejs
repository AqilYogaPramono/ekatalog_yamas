<%- include('../../partials/header/__headerDashboard.ejs', { title: 'Dashboard Pustakawan' }) %>
<%- include('../../partials/nav-side/__nav-sidePengurus.ejs') %>
<%- include('../../partials/messages/messagesDashboard.ejs') %>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 col-sm-6 col-lg-4 grid-margin stretch-card">
                <div class="stat-card card w-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Total Buku</div>
                                <div class="stat-number" data-count="<%= totalBuku[0].total_buku %>"><%= totalBuku[0].total_buku %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-lg-4 grid-margin stretch-card">
                <div class="stat-card card w-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Total Majalah</div>
                                <div class="stat-number" data-count="<%= totalMajalah[0].total_majalah %>"><%= totalMajalah[0].total_majalah %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-12 col-lg-4 grid-margin stretch-card">
                <div class="stat-card card w-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <div class="stat-label">Total Koran</div>
                                <div class="stat-number" data-count="<%= totalKoran[0].total %>"><%= totalKoran[0].total %></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title mb-0">Buku Terbaru</h4>
                            <a href="/pustakawan/buku" class="btn btn-primary btn-sm">
                                <i class="mdi mdi-eye"></i> Lihat Semua
                            </a>
                        </div>
                        <div>
                            <table class="table table-hover table-stacked">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Judul</th>
                                        <th>ISBN/ISSN</th>
                                        <th>No. Klasifikasi</th>
                                        <th>Lokasi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (newBuku && newBuku.length > 0) { %>
                                        <% for (let i = 0; i < newBuku.length; i++) { %>
                                            <tr>
                                                <td data-label="No"><%= i + 1 %></td>
                                                <td data-label="Judul"><%= newBuku[i].judul %></td>
                                                <td data-label="ISBN/ISSN"><%= newBuku[i].isbn_issn %></td>
                                                <td data-label="No. Klasifikasi"><%= newBuku[i].no_klasifikasi %></td>
                                                <td data-label="Lokasi"><%= newBuku[i].lokasi_buku %></td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">Tidak ada data</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title mb-0">Majalah Terbaru</h4>
                            <a href="/pustakawan/majalah" class="btn btn-primary btn-sm">
                                <i class="mdi mdi-eye"></i> Lihat Semua
                            </a>
                        </div>
                        <div>
                            <table class="table table-hover table-stacked">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Judul</th>
                                        <th>Edisi</th>
                                        <th>No. Klasifikasi</th>
                                        <th>Lokasi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (newMajalah && newMajalah.length > 0) { %>
                                        <% for (let i = 0; i < newMajalah.length; i++) { %>
                                            <tr>
                                                <td data-label="No"><%= i + 1 %></td>
                                                <td data-label="Judul"><%= newMajalah[i].judul %></td>
                                                <td data-label="Edisi"><%= newMajalah[i].edisi %></td>
                                                <td data-label="No. Klasifikasi"><%= newMajalah[i].no_klasifikasi %></td>
                                                <td data-label="Lokasi"><%= newMajalah[i].lokasi_majalah %></td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">Tidak ada data</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title mb-0">Koran Terbaru</h4>
                            <a href="/pustakawan/koran" class="btn btn-primary btn-sm">
                                <i class="mdi mdi-eye"></i> Lihat Semua
                            </a>
                        </div>
                        <div>
                            <table class="table table-hover table-stacked">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Penerbit</th>
                                        <th>Tahun</th>
                                        <th>Bulan</th>
                                        <th>Dibuat Pada</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (newKoran && newKoran.length > 0) { %>
                                        <% for (let i = 0; i < newKoran.length; i++) { %>
                                            <tr>
                                                <td data-label="No"><%= i + 1 %></td>
                                                <td data-label="Penerbit"><%= newKoran[i].nama_penerbit || newKoran[i]['nama _penerbit'] || '-' %></td>
                                                <td data-label="Tahun"><%= newKoran[i].tahun %></td>
                                                <td data-label="Bulan"><%= newKoran[i].bulan %></td>
                                                <td data-label="Dibuat Pada"><%= new Date(newKoran[i].dibuat_pada).toLocaleString('id-ID') %></td>
                                            </tr>
                                        <% } %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="5" class="text-center">Tidak ada data</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/script/__scriptDashboard.ejs') %>
